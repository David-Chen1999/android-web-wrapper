<resources xmlns:android="http://schemas.android.com/apk/res/android">
	
	<style name="AppTheme" parent="@android:style/Theme.Holo.Light">
		<item name="android:windowBackground">@drawable/window_bg</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:actionBarStyle">@style/ActionBarStyle</item>
		<item name="android:actionBarSize">@dimen/ab_size</item>
		<item name="android:actionOverflowButtonStyle">@style/ActionBarOverflowStyle</item>
		<item name="android:textColorPrimary">@color/text1</item>
		<item name="android:textColorPrimaryInverse">@color/text2</item>
	</style>
	
	<style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
		<item name="android:background">@drawable/action_bar_bg</item>
		<item name="android:indeterminateProgressStyle">@style/ActionBarProgressStyle</item>
		<item name="android:progressBarPadding">@dimen/ab_progress_padding</item>
		<item name="android:customNavigationLayout">@layout/action_bar_title</item>
		<item name="android:displayOptions">showHome|showCustom</item>
		<item name="android:animateLayoutChanges">true</item>
	</style>
	
	<style name="ActionBarProgressStyle" parent="@android:style/Widget.Holo.ProgressBar">
		<item name="android:minWidth" >@dimen/ab_progress_size</item>
		<item name="android:maxWidth" >@dimen/ab_progress_size</item>
		<item name="android:minHeight">@dimen/ab_progress_size</item>
		<item name="android:maxHeight">@dimen/ab_progress_size</item>
	</style>
	
	<style name="ActionBarOverflowStyle" parent="@android:style/Widget.Holo.ActionButton.Overflow">
		<item name="android:src">@drawable/ic_action_overflow_round</item>
	</style>
	
</resources>
